{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowJs": true,
        "jsx": "preserve",
        "types": [
            "vite/client"
        ],
        "lib": [
            "ESNext",
            "DOM",
        ],
        "allowUmdGlobalAccess": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue",
        "*.d.ts",
        "*.ts"
    ],
}
